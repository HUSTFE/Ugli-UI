{
  "name": "Ugli-UI",
  "version": "0.0.1",
  "description": "Mobile UI elements for React/Vue/Angular",
  "main": "index.js",
  "repository": "https://github.com/HUSTFE/Ugli-UI.git",
  "license": "MIT",
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "testEnvironment": "jsdom",
    "moduleNameMapper": {
      "^@shared[/](.+)": "<rootDir>/src/components/shared/$1",
      "^.+\\.sass$": "identity-obj-proxy",
      "^.+\\.(ico|jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/__mocks__/fileMock.js"
    }
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-transition-group": "^1.2.1"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.2.14",
    "@storybook/addon-links": "^3.2.14",
    "@storybook/addons": "^3.3.0",
    "@storybook/react": "^3.2.14",
    "art-template": "^4.12.2",
    "autoprefixer": "^7.2.5",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-loader": "^7.1.2",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-runtime": "^6.23.0",
    "better-npm-run": "^0.1.0",
    "chalk": "^2.3.0",
    "css-loader": "^0.28.7",
    "eslint": "^4.10.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-babel": "^4.1.2",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-markdown": "^1.0.0-beta.6",
    "eslint-plugin-react": "^7.4.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^21.2.1",
    "node-sass": "^4.6.0",
    "pre-commit": "^1.2.2",
    "react-test-renderer": "^16.0.0",
    "rollup": "^0.55.3",
    "rollup-plugin-alias": "^1.4.0",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-plugin-commonjs": "^8.3.0",
    "rollup-plugin-json": "^2.3.0",
    "rollup-plugin-node-resolve": "^3.0.2",
    "rollup-plugin-postcss": "^1.2.8",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.0",
    "webpack": "^3.8.1",
    "yargs": "^10.0.3"
  },
  "scripts": {
    "lint": "eslint src --ext '.js'",
    "test": "jest",
    "authors": "git log --format='%aN <%aE>' | sort -u | grep -v 'users.noreply.github.com' > AUTHORS.txt",
    "start": "start-storybook -p 6006",
    "storybook": "start-storybook -p 6006",
    "build": "better-npm-run build",
    "build-storybook": "build-storybook",
    "new": "node ./scripts/createNew.js"
  },
  "betterScripts": {
    "build": {
      "command": "rollup -c",
      "env": {
        "BABEL_ENV": "production",
        "NODE_ENV": "production"
      }
    }
  },
  "pre-commit": [
    "lint",
    "test"
  ]
}
